  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell: Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    // https://github.com/nightroman/Invoke-Build/wiki/Debugging-Tips
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "Invoke-Build Default Task",
      "script": "Invoke-Build",
      "args": [
        ".",
        "${file}"
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "Invoke-Build Current Task",
      "script": "Invoke-TaskFromVSCode",
      "args": [],
      "cwd": "${workspaceRoot}"
    }
  ]
}